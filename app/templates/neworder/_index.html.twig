 <table class="table">
    <thead>
        <tr>
            <th scope="col">Название</th>
            <th scope="col">Количество</th>
            <th scope="col">Цена</th>
            <th scope="col">Сумма</th>
        </tr>
    </thead>
    <tbody>
    {% for item in order %}
        <tr>
            <td>{{ item.product }}</td>
            <td>{{ item.quantity }}</td>
            <td>{{ item.cost }}</td>
            <td>{{ item.amount }}</td>                   
        </tr>
    {% endfor %}
    </tbody>
</table>